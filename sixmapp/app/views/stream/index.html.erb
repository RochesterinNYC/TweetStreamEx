<%= form_tag("/test", :method => "get", class: "container text-center") do %> 

  <!-- map -->
  <div class="rightCol" id="map">
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <%= javascript_include_tag "map.js" %>   
  </div>


  <!-- search -->
  <div class="leftCol">
  <h2>Tweets About ...</h2>
  <div>
    <%= label_tag(:q, "keywords:") %>
    <%= text_field_tag(:keywords) %>
  </div>
  <div>
    <%= label_tag(:q, "exclude:") %>
    <%= text_field_tag(:exclude) %>
  </div>
  <div>
    <%= label_tag(:q, "language:") %>
    <select class="form-control" name="language">
      <option value="en">English</option>
      <option value="es">Spanish</option>
    </select>
  </div>
  <div>
    <%= label_tag(:q, "latitude:") %>
    <%= text_field_tag(:latitude) %>
    <%= label_tag(:q, "longitude:") %>
    <%= text_field_tag(:longitude) %>
    <%= label_tag(:q, "radius:") %>
    <%= text_field_tag(:radius) %>
  </div>
  <div>
    <input type="radio" name="distance" value="mi" checked>mile
    <input type="radio" name="distance" value="km">km 

  </div>

  <br/>
  <div>
    <%= submit_tag("Search", class: 'btn btn-primary') %>
  </div>
  <div>
    <%= @warning %>
  </div>
  </div>

  

  <!-- graph -->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load("visualization", "1", {packages:["corechart"]});
      google.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Year', 'Sales'],
          ['2004',  1000 ],
          ['2005',  1170 ],
          ['2006',  660  ],
          ['2007',  1030 ]
        ]);

        var options = {
          title: 'Company Performance',
          hAxis: {title: 'Year',  titleTextStyle: {color: '#333'}},
          vAxis: {minValue: 0}
        };

        var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>  
  <div class="tweets" id="chart_div" style="width: 900px; height: 500px;"></div>

  </div>
<% end %>


<br />
